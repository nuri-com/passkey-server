# Database Configuration
DATABASE_URL=postgresql://passkey_user:your_password@localhost:5432/passkey_db

# Server Configuration
PORT=3000
NODE_ENV=production

# WebAuthn Configuration
# IMPORTANT: For iOS apps, RP_ID should be the parent domain
# Example: If your server runs at passkey.example.com, RP_ID should be example.com
RP_ID=yourdomain.com
RP_NAME=Your Wallet Name
ORIGIN=https://passkey.yourdomain.com

# Security
SESSION_SECRET=generate-a-random-secret-here

# Optional: Email for notifications
ADMIN_EMAIL=admin@yourdomain.com